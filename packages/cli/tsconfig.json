{
  "include": ["./src"],
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "strict": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
